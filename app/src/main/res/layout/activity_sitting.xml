<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/arest_header_style"
android:layout_marginLeft="20dp"
android:layout_marginRight="20dp"
android:layout_marginTop="20dp"
android:padding="10dp"
android:id="@+id/languagelinearid"
    android:layout_below="@+id/toolbarlayoutid"
    android:orientation="vertical"

    >
<TextView
    android:text="@string/selectlangauge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView3"
    android:paddingTop="10dp"
    android:textColor="#000"
    />
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/langgroup"
    android:layout_marginTop="30dp"
    android:backgroundTint="#fff"
    >

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/englanguage"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:text="English"
        />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/arlanguague"
        android:gravity="right"
        android:paddingTop="5dp"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:text="Arabic"/>
</RadioGroup>


</LinearLayout>





<Switch
android:id="@+id/notify_switch"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/notifyme"
android:layout_marginRight="50dp"
android:layout_marginLeft="50dp"
android:layout_marginTop="10dp"
android:padding="10dp"
android:textSize="20sp"
android:layout_below="@+id/languagelinearid"
