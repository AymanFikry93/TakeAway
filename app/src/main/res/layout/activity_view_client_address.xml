<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_client_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.srccode.takeawayproject.Activities.ActivityViewClientAddress">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="#3B5998"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/title"
            android:text="Address Information"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backtoresturantbtn"
            android:background="@drawable/back_arrow"/>
    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/viewaddresslist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#e78383"
        android:dividerHeight="10dp"
        android:layout_below="@+id/addadressbtn"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Add new Address "
        android:id="@+id/addadressbtn"
        android:layout_marginTop="16dp"
        android:background="@drawable/arest_header_style"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp" />

</RelativeLayout>
