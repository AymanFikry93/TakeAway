<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:background="#f9f3f3"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:gravity="center_horizontal">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical" >


    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:fillViewport="true">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/arest_header_style"
        >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
               >
                <TextView
                    android:id="@+id/pricereviewid"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="80 %"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:background="@drawable/bg_profile_item"
                    android:layout_below="@+id/tvProfileDuty"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pricevsvaluetxt"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:lines="3"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/btnProfileLoginTime"
                    android:id="@+id/textView1"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >


                <TextView
                    android:id="@+id/deliveryreview"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="70 %"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:background="@drawable/bg_profile_item"
                    android:gravity="center"/>
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/deliverytimetxt"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:id="@+id/textView2"
                android:lines="2"

                />

            </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
       android:layout_weight="1"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/qualityreviewid"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="70%"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/bg_profile_item"
            android:gravity="center"/>



        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/qualitytxt"
            android:id="@+id/textView3"
            android:layout_marginTop="15dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:lines="2"
            android:gravity="center"

            />
    </LinearLayout>


</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/puturReview"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/btn_place_order_style"
        android:text="@string/putreview"
        android:layout_gravity="center"
        />
<!--</ScrollView>-->

    </LinearLayout>
</ScrollView>