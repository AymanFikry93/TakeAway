<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:elevation="3dp"
    card_view:cardCornerRadius="0dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="20dp"
    android:padding="8dp"
    android:orientation="horizontal"
    android:weightSum="1">


    <!--<Button-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/delete_blue"-->
        <!--android:id="@+id/deleteorderbtn"-->
        <!--android:onClick="deleteOrder"-->
        <!--/>-->
    <!-- Thumbnail Image -->
    <!--android:src="@drawable/foodex"-->
    <ImageView
        android:id="@+id/orderimage"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="8dp" />

    <!-- Movie Title -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderlayout"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ordername"
            android:text="order name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/addtionname"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="10dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/drinkname"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- quantity -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pricelayout"
        android:orientation="vertical"
        android:layout_weight="0.85">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quantitylayout"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/quantity"
                android:text="@string/quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:textSize="12sp"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/quantitycalclayout"
                android:orientation="horizontal">
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:id="@+id/incrementorderbtn"
                    android:text="+"
                    android:background="@drawable/buttonaddshape"
                    />
                <TextView
                    android:id="@+id/orderquantity"
                    android:text="1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/decrementorderbtn"
                    android:text="-"
                    android:background="@drawable/buttonaddshape"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- rprice -->
        <TextView
            android:id="@+id/itemorderprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Price"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="12sp" />

        <!--  totalitemorderprice -->
        <TextView
            android:id="@+id/totalitemorderprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TotalPrice"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000"
            android:textSize="12sp" />
    </LinearLayout>
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/gotoorderbutton"-->
        <!--android:background="@drawable/arrowforwardicon"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--/>-->
</LinearLayout>
</android.support.v7.widget.CardView>